<div class="container my-5 bg-light p-5" style="border-radius: 50px;">

  <form action="/record" method="POST" onsubmit="doAlert.create_alert();">

    {{> message}}

    <label for="merchant">
      <h4>Merchant</h4>
    </label>
    <input type="text" class="form-control mb-3" id="merchant" name="merchant" value="{{newRecord.merchant}}" required>

    <label for="name">
      <h4>Item Name</h4>
    </label>
    <input type="text" class="form-control mb-3" id="name" name="name" value="{{newRecord.name}}" required>

    <label for="date">
      <h4>Date</h4>
    </label>
    <input type="date" class="form-control mb-3" id="date" name="date" {{#if newRecord.date}}value="{{newRecord.date}}"
      {{else}}value="2020-01-01" {{/if}} required>

    <label for="category">
      <h4>Category</h4>
    </label>
    <select class="form-control mb-3" id="category" name="category">
      <option value="Housing" {{#if newRecord.optionHousing}}selected="selected" {{/if}}>Housing</option>
      <option value="Transportation" {{#if newRecord.optionTransportation}}selected="selected" {{/if}}>Transportation
      </option>
      <option value="Entertainment" {{#if newRecord.optionEntertainment}}selected="selected" {{/if}}>Entertainment
      </option>
      <option value="Food" {{#if newRecord.optionFood}}selected="selected" {{/if}}>Food</option>
      <option value="Others" {{#if newRecord.optionOthers}}selected="selected" {{/if}}>Others</option>
    </select>

    <label for="amount">
      <h4>Amount</h4>
    </label>
    <input type="number" step="1" min="0" class="form-control mb-3" id="amount" name="amount"
      value="{{newRecord.amount}}" required>

    <button type="submit" class="btn btn-primary my-3">Create</button>

  </form>

</div>